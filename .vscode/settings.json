{
    "files.exclude": {
        "**/.coverage": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/htmlcov": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.env": true,
        "**/.env.*": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.pyd": true,
        "**/.Python": true,
        "**/build": true,
        "**/dist": true,
        "**/*.egg": true
    },
    "search.exclude": {
        "**/.coverage": true,
        "**/.pytest_cache": true,
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/htmlcov": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/node_modules": true,
        "**/.env": true,
        "**/.env.*": true
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestUseCoverage": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit",
        "source.organizeImports.ruff": "explicit"
    },
    "python.defaultInterpreterPath": ".venv_workflows/bin/python",
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ]
}